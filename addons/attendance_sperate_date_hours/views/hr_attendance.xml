<odoo>
  <data>
    <record id="date_time_inherit_hr_attendance_form_view" model="ir.ui.view">
        <field name="name">date.time.inherit.hr.attendance.form.view</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='employee_id']" position="after">
            <field name="attendance_date"/>
            <field name="hour_in"/>
            <field name="hour_out"/>
          </xpath>
        </field>
    </record>
  </data>
</odoo>